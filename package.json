{
  "name": "backend-rootchain",
  "version": "1.0.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "description": "",
  "main": "truffle-config.js",
  "repository": "github:hey-network/mainchain",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "solium --dir ./contracts --fix",
    "test": "truffle test --network test test/Token.test.js test/TokenSale.test.js test/Gateway.test.js",
    "test:token": "truffle test --network test test/Token.test.js",
    "test:token:name": "truffle test --network test test/Token.test.js -g 'sets the token symbol'",
    "test:token-sale": "truffle test --network test test/TokenSale.test.js",
    "test:gateway": "truffle test --network test test/Gateway.test.js",
    "mythril": "npm run mythril:token && npm run mythril:token-sale && npm run mythril:gateway && npm run mythril:vesting-trustee",
    "mythril:token": "npm run mythrill contracts/Token.sol",
    "mythril:token-sale": "npm run mythrill contracts/TokenSale.sol",
    "mythril:gateway": "npm run mythrill contracts/Gateway.sol",
    "mythril:vesting-trustee": "npm run mythrill contracts/VestingTrustee.sol",
    "mythrill": "myth --solc-args \"openzeppelin-solidity/=$(pwd)/node_modules/openzeppelin-solidity/\" -x"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "openzeppelin-solidity": "^2.0.0",
    "typedarray-to-buffer": "^3.1.5",
    "web3": "^1.0.0-beta.35",
    "yaeti": "^1.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-bignumber": "^2.0.2",
    "pify": "^4.0.1"
  }
}
